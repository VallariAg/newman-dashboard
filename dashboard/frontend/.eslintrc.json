{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["next"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/react-in-jsx-scope": [0],
        "react/jsx-filename-extension": [0],
        "react/jsx-props-no-spreading": [0],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "linebreak-style": ["off", "auto"]
    }
}
